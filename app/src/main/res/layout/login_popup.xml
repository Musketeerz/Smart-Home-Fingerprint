<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#3c71d4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="4dp"
        android:background="#fff">

        <TextView
            android:id="@+id/enter_password"
            android:layout_width="200dp"
            android:text="Enter Passcode"
            android:textSize="25sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/adhaar"
            android:layout_width="350dp"
            android:layout_height="50dp" 
            android:hint="First 5 digits of ADHAAR number"
            android:layout_centerHorizontal="true"
            android:inputType="numberPassword"
            android:layout_below="@+id/enter_password"/>
        <EditText
            android:id="@+id/consumer"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Last 5 digits of CONSUMER number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:inputType="numberPassword"
            android:layout_below="@+id/adhaar"/>

        <TextView
            android:id="@+id/sync"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:text="Sync with Device"
            android:textSize="16sp"
            android:textColor="#000"
            android:textAlignment="center"
       android:layout_alignStart="@+id/enter_password" />



    </RelativeLayout>

</RelativeLayout>